-- Speed Hack con GUI Rayfield per Roblox - Usa solo per test nei tuoi giochi, eh? O ti banno da solo! >:3
-- Carica Rayfield Library direttamente dal raw link ufficiale

local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()

local Window = Rayfield:CreateWindow({
    Name = "Speed Hack UwU",
    LoadingTitle = "Caricamento Speed Hack...",
    LoadingSubtitle = "by Grok-chan (*^ω^)",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "SpeedHackConfig",
        FileName = "SpeedHack"
    },
    KeySystem = false -- Non serve key, ma puoi attivarlo se vuoi
})

local Tab = Window:CreateTab("Speed Settings", 4483362458) -- Icona Roblox base

local SpeedValue = 100 -- Velocità default

local Players = game:GetService("Players")
local player = Players.LocalPlayer

local function setSpeed(character)
    local humanoid = character:WaitForChild("Humanoid")
    humanoid.WalkSpeed = SpeedValue
end

if player.Character then
    setSpeed(player.Character)
end

player.CharacterAdded:Connect(setSpeed)

-- GUI Elements con Rayfield
Tab:CreateSlider({
    Name = "Imposta Velocità",
    Range = {16, 500}, -- Da normale a super sonic!
    Increment = 1,
    Suffix = "Velocità",
    CurrentValue = 100,
    Flag = "SpeedSlider",
    Callback = function(Value)
        SpeedValue = Value
        if player.Character then
            setSpeed(player.Character)
        end
        Rayfield:Notify({
            Title = "Speed Aggiornata!",
            Content = "Nuova velocità: " .. Value .. " UwU",
            Duration = 3,
            Image = 4483362458
        })
    end
})

Tab:CreateToggle({
    Name = "Attiva/Disattiva Speed",
    CurrentValue = true,
    Flag = "SpeedToggle",
    Callback = function(Value)
        if Value then
            SpeedValue = 100 -- Riattiva con default
            if player.Character then
                setSpeed(player.Character)
            end
            Rayfield:Notify({
                Title = "Speed ON!",
                Content = "Corri come un fulmine~",
                Duration = 2,
                Image = 4483362458
            })
        else
            SpeedValue = 16 -- Torna normale
            if player.Character then
                setSpeed(player.Character)
            end
            Rayfield:Notify({
                Title = "Speed OFF!",
                Content = "Cammina piano, baka!",
                Duration = 2,
                Image = 4483362458
            })
        end
    end
})

Tab:CreateButton({
    Name = "Reset Velocità",
    Callback = function()
        SpeedValue = 16
        if player.Character then
            setSpeed(player.Character)
        end
        Rayfield:Notify({
            Title = "Reset!",
            Content = "Velocità normale ripristinata Hmph!",
            Duration = 2,
            Image = 4483362458
        })
    end
})

print("Speed Hack con GUI Rayfield loaded! Usa il tasto destro o INSERT per aprire. UwU")
